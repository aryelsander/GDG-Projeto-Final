<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aryel.humansvsorcs.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/display_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THE FIGHT BEGINS!"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="PLAYER" />
                <TextView
                    android:id="@+id/player_hp_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="HP - 0" />

                <TextView
                    android:id="@+id/player_st_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="ST - 0" />

                <TextView
                    android:id="@+id/player_atk_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="ATK - 0" />

                <TextView
                    android:id="@+id/player_def_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="DEF - 0" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enemy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="ENEMY" />
                <TextView
                    android:id="@+id/enemy_hp_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="HP - 0" />

                <TextView
                    android:id="@+id/enemy_st_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="ST - 0" />

                <TextView
                    android:id="@+id/enemy_atk_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="ATK - 0" />

                <TextView
                    android:id="@+id/enemy_def_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="20dp"
                    android:text="DEF - 0" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/player_button_atk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Attack"
                android:onClick="attack"/>
            <Button
                android:id="@+id/player_button_defend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Defend"
                android:onClick="defend"/>
            <Button
                android:id="@+id/player_button_rest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Rest"
                android:onClick="rest"/>

            <Button
                android:id="@+id/player_button_nextBattle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Battle"
                android:enabled="false"
                android:onClick="nextBattle"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
